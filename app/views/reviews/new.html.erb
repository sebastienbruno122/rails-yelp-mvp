<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h1>Add a new review</h1>

      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :rating %>
        <%= f.input :content %>
        <%= f.submit class: 'btn btn-primary mt-3' %>
      <% end %>
    </div>
  </div>
</div>
